{
  "name": "ac-realms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/ac-realms/src",
  "projectType": "application",
  "targets": {
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "outputPath": "dist/packages/ac-realms",
        "changelog": true,
        "github": true,
        "npm": false,
        "repositoryUrl": "https://github.com/DarktideLegend/escape-from-dereth.git",
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "Features" },
            { "type": "fix", "section": "Bug Fixes" },
            {
              "type": "refactor",
              "section": "Code Refactoring",
              "hidden": false
            },
            {
              "type": "docs",
              "scope": "readme",
              "section": "Documentation",
              "hidden": false
            },
            {
              "type": "build",
              "scope": "deps",
              "section": "Build System Dependencies",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "Performance Improvements",
              "hidden": false
            },
            {
              "type": "revert",
              "section": "Revert Changes",
              "hidden": false
            }
          ]
        },
        "releaseRules": [
          { "type": "docs", "scope": "readme", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "build", "scope": "deps", "release": "patch" },
          { "type": "revert", "release": "patch" },
          { "type": "perf", "release": "patch" }
        ],
        "branches": [
          "main",
          {
            "name": "dev-ac-realms",
            "prerelease": true
          }
        ],
        "plugins": [
              [
            "semantic-release-discord-bot",
            {
              "packageName": "ac-realms",
              "notifications": [
                {
                  "branch": "main/*"
                }
              ]
            }
          ]
        ],
        "tagFormat": "ac-realms-v${VERSION}"
      }
    }
  },
  "tags": []
}
